	<RecipeDef ParentName="ARRecipeArmorBase">
		<defName>AdRef_RecipeDefs_CraftArmor_Slag_Vest_Crude</defName>
		<label>Craft Crude Slag Vest</label>
		<description>Craft a crude vest armour from a piece of slag.</description>
		<jobString>Crafting</jobString>
		<workAmount>500</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ChunkSlagSteel</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ChunkSlagSteel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AdRef_Apparel_Slag_Vest_Crude>1</AdRef_Apparel_Slag_Vest_Crude>
		</products>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
	</RecipeDef>

