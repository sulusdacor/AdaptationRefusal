			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Component</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Component</li>
				<li>Gun_BoltActionRifle</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AdRef_Gun_ChargeSniper>1</AdRef_Gun_ChargeSniper>
		</products>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
	</RecipeDef>

