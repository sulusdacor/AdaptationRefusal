	<!-- ============ PrepareSynthMeal ============ -->

	<RecipeDef>
		<defName>AdRef_RecipeDefs_PrepareSynthMeal</defName>
		<label>create synth meal</label>
		<description>Synthesizes Algae-Kryll Goo and Electrolyte Solution into a reasonably edible meal. Not recommended for prolonged consumption.(makes 10 meals)</description>
		<jobString>Creating synth meal.</jobString>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workSkill>Crafting</workSkill>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AdRef_ThingDef_ElectrodrinkRaw</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AdRef_ThingDef_AlgaeKryllRaw</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AdRef_ThingDef_ElectrodrinkRaw</li>
				<li>AdRef_ThingDef_AlgaeKryllRaw</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AdRef_ThingDef_SynthMeal>10</AdRef_ThingDef_SynthMeal>
		</products>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
	</RecipeDef>

</Defs>