<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ============ PrepareElectrodrinkRaw ============ -->

	<RecipeDef>
		<defName>AdRef_RecipeDefs_PrepareElectrodrinkRaw</defName>
		<label>Prepare Electrodrink</label>
		<description>prepare a canister of electrolytes solution with minerals and moisture.(makes 10 drinks)</description>
		<jobString>Collecting Moisture</jobString>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<workSkill>Crafting</workSkill>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AdRef_ThingDef_ElectrodrinkRaw>10</AdRef_ThingDef_ElectrodrinkRaw>
		</products>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
	</RecipeDef>

