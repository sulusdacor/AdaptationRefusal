<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ============ ApparelBase ============ -->

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-4</Beauty>
			<SellPriceFactor>0.70</SellPriceFactor>
			<Mass>4</Mass>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<drawGUIOverlay>true</drawGUIOverlay>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>

	<!-- ============ Slag_Vest_Crude ============ -->

	<ThingDef ParentName="ApparelBase">
		<defName>AdRef_Apparel_Slag_Vest_Crude</defName>
		<label>Crude Slag Vest</label>
		<description>Constructed of recycled slag, this vest is encumbering but effective against bludgeoning. The gaps in the plates render it almost useless against animals, bullets, or fire. It's made of metal, so don't get electrocuted while wearing this.</description>
		<costList>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</costList>
		<graphicData>
			<texPath>Vest_Crude/Vest_Crude</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<MarketValue>30</MarketValue>
			<ArmorRating_Blunt>0.65</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.15</ArmorRating_Sharp>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<ArmorRating_Electric>-0.30</ArmorRating_Electric>
			<Insulation_Cold>-5</Insulation_Cold>
			<Insulation_Heat>-5</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.20</MoveSpeed>
		</equippedStatOffsets>
		<generateCommonality>0</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<wornGraphicPath>Vest_Crude/Vest_Crude</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>CraftedArmor</li>
			</tags>
		</apparel>
	</ThingDef>

	<!-- ============ Slag_Vest_Improved ============ -->

	<ThingDef ParentName="ApparelBase">
		<defName>AdRef_Apparel_Slag_Vest_Improved</defName>
		<label>Improved Slag Vest</label>
		<description>An improvement of the crude slag vest, this armour has been adapted to the frame of the user, and has had its looks upgraded with a hand of paint. Watch out for fire and electricity.</description>
		<costList>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</costList>
		<graphicData>
			<texPath>Vest_Improved/Vest_Improved</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<MarketValue>70</MarketValue>
			<ArmorRating_Blunt>0.40</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.40</ArmorRating_Sharp>
			<ArmorRating_Heat>0.10</ArmorRating_Heat>
			<ArmorRating_Electric>-0.15</ArmorRating_Electric>
			<Insulation_Cold>-10</Insulation_Cold>
			<Insulation_Heat>-10</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.15</MoveSpeed>
		</equippedStatOffsets>
		<generateCommonality>0</generateCommonality>
		<apparel>
			<wornGraphicPath>Vest_Improved/Vest_Improved</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>CraftedArmor</li>
			</tags>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<min>RGBA(0.5,0.5,0.5,1)</min>
					<max>RGBA(1,1,1,1)</max>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

