		<apparel>
			<wornGraphicPath>Helm/Helm_Crude</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>CraftedHelmet</li>
			</tags>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
		</apparel>
	</ThingDef>

