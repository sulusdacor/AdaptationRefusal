	<!-- ============ Slag_Helm_Crude ============ -->

	<ThingDef ParentName="ApparelBase">
		<defName>AdRef_Apparel_Slag_Helm_Crude</defName>
		<label>Crude Slag Helmet</label>
		<description>A crude helmet shaped from recycled slag. It's effective, but neck cramps are guaranteed due to its weight. The thick plate offer a good protection against gunshots, just avoid melee since you can't see anything.</description>
		<costList>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</costList>
		<graphicData>
			<texPath>Helm/Helm_Crude</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<MarketValue>80</MarketValue>
			<ArmorRating_Blunt>0.80</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
			<ArmorRating_Heat>0.50</ArmorRating_Heat>
